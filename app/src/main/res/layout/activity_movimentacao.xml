<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <EditText android:id="@+id/nome" android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"
                android:hint="Nome"/>

    <EditText android:id="@+id/codigo" android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="@+id/nome"
              android:layout_marginTop="8dp"
              app:layout_constraintStart_toStartOf="@+id/nome" app:layout_constraintTop_toBottomOf="@+id/nome"
              android:hint="Código"
    />

    <EditText android:id="@+id/data"
              android:visibility="gone"
              android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="@+id/codigo"
              app:layout_constraintStart_toStartOf="@+id/codigo" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/codigo"
              android:hint="Data da movimentação"/>

    <EditText android:id="@+id/valor_cota" android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="@+id/nome"
              app:layout_constraintStart_toStartOf="@+id/nome" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/data"
              android:hint="Valor da cota"/>

    <EditText android:id="@+id/quantidade_cotas" android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="@+id/valor_cota"
              app:layout_constraintStart_toStartOf="@+id/valor_cota" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/valor_cota"
              android:hint="Quantidade de cotas"/>

    <Button
            android:id="@+id/btn_registrar"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:text="Salvar" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/quantidade_cotas"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_excluir"
            android:visibility="gone"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:text="Excluir" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_registrar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>